<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.AllNewsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/newsRecycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7EFF4"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <Button
                        android:id="@+id/btn_general"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/category_button"
                        android:paddingHorizontal="16dp"
                        android:text="General"
                        android:textColor="@color/category_button_text" />

                    <Button
                        android:id="@+id/btn_business"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/category_button"
                        android:paddingHorizontal="16dp"
                        android:text="Business"
                        android:textColor="@color/category_button_text" />

                    <Button
                        android:id="@+id/btn_health"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/category_button"
                        android:paddingHorizontal="16dp"
                        android:text="Health"
                        android:textColor="@color/category_button_text" />

                    <Button
                        android:id="@+id/btn_ent"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/category_button"
                        android:paddingHorizontal="16dp"
                        android:text="Entertainment"
                        android:textColor="@color/category_button_text" />

                    <Button
                        android:id="@+id/btn_tech"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/category_button"
                        android:paddingHorizontal="16dp"
                        android:text="Technology"
                        android:textColor="@color/category_button_text" />

                    <Button
                        android:id="@+id/btn_science"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/category_button"
                        android:paddingHorizontal="16dp"
                        android:text="Sceince"
                        android:textColor="@color/category_button_text" />

                    <Button
                        android:id="@+id/btn_sports"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/category_button"
                        android:paddingHorizontal="16dp"
                        android:text="Sports"
                        android:textColor="@color/category_button_text" />
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>